<% include partials/header.ejs %>

    <div class="container">
        <h1>The Collector <small>(Under Construction)</small></h1>

        <% if(typeof user != 'undefined') { %>
        Hello, <b><%= typeof user.name === 'string' ? user.name : 'Unknown' %></b>.
        <% } %>
        
        
        <div class="row">

        <!-- Signup Form -->
        <div class="col-sm-5 col-sm-offset-1">
        <h2>Create An Account</h2>
        <form action="auth/signup" method="post">
            <input type="text" class="form-control" placeholder="Your Email" name="email">
            <input type="password" class="form-control" placeholder="Choose a password" name="password">
            <input type="password" class="form-control" placeholder="Re-type your password" name="password2">
            <input type="submit" class="btn btn-primary" placeholder="" value="Sign Me Up!">
        </form>
        </div>

        <!-- Login Form -->
        <div class="col-sm-5">
        <h2>Log In</h2>
        <form action="auth/login" method="post">
            <input type="text" class="form-control" placeholder="Your Email" name="email">
            <input type="password" class="form-control" placeholder="Your password" name="password">
            <input type="submit" class="btn btn-primary" placeholder="" value="Log Me In!">
        </form>
        </div>

        <!-- Search Form -->
        <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <h2>Search <small>(Powered By Comic Vine)</small></h2>
            <form action="/" method="post">
                <input type="text" class="form-control" placeholder="Search by Issue Name" name='searchTerms'>
            <input type="submit" class="btn btn-primary" placeholder="" value="Search">
            </form>
        </div>
        </div>

        <!-- Comics! -->
        <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
        <% if (typeof searchResults != 'undefined') { %>
        <% searchResults.results.forEach(function(element){ %>
        <div>
            <a href="#">
                <img src="<%= element.image.thumb_url %>" alt="">
            </a>  
        </div>
        <% }) %>
        <% } %>

        </div>
        </div>

        </div>
    </div>

<% include partials/footer.ejs %>